extends ./quanli_nav
block content
	div.muonsach-content
		div.muonsach-phan1
			div.muonsach1
				h2 Thông tin phiếu mượn
				div.text-right
					button.p-1.m-1.btn#btn-sv Nhập thông tin sinh viên
					button.p-1.m-1.btn#btn-s Danh sách mượn
				div.display-content
					div#muonsach1
						input( id='thongtin-mssv' placeholder="Nhập vào mssv")
						input.m-2(type='button' id='thongtin' value='Thông tin')
						br
						if sinhvien
								h3 Thông tin sinh viên
								table.table
									tr
										th Mã số sinh viên
										td(id='display-mssv')= sinhvien.mssv
									tr
										th Họ tên
										td= sinhvien.hoten
									tr
										th Email
										td= sinhvien.email
						if sv_length == 0
							.alert.alert-danger Không tồn tại sinh viên này
					div#muonsach2
						div#table-phieumuon
		
				br
				button.btn.btn-info#xacnhan Xác nhận
		div.muonsach-phan2
			div.muonsach2
				h2 Danh mục sách
				input#timkiem-content(type='text' placeholder='Tìm kiếm theo tên sách')
				button.m-2.btn-info#btn-timkiem Tìm kiếm
				br
				br
				div#table-content2
					table.table.table-bordere
						tr
							th STT
							th Tên sách
							th Tác giả
							th Số lượng
							th Mượn sách
						- var i = 1
						if danhmucsach
							each dms in danhmucsach
								tr
									td= i++
									td= dms.tensach
									td= dms.tacgia
									td= dms.soluong - dms.soluongMuon
									td
										button.btn(class='add' data-idsach= dms.idsach) Thêm
	script
		include ../code/quanli.muonsach.js				