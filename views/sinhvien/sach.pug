extends ./sinhvien_nav
block content
	div.sach-content
		div.sach-phan1
			div.sach-content1.p-2
				h2 Danh mục sách
				input#timkiem-content(type='text' placeholder='Tìm kiếm theo tên sách')
				button.m-2.btn-info#btn-timkiem Tìm kiếm
				br
				br
				div.display-sach-sinhvien
					table.table.table-bordered
						tr
							th STT
							th Tên sách
							th Tác giả
							th Số lượng
							th Mượn sách
						- var i = 1
						if danhmucsach
							each dms in danhmucsach
								tr
									td= i++
									td= dms.tensach
									td= dms.tacgia
									td= dms.soluong
									td
										button.btn(id='muon' data-idsach= dms.idsach) Mượn
		div.sach-phan2
			div.sach-content2
					br
					h3.text-center.text-info Phiếu mượn sách
					br
					br
					table.table.table-bordered
						tr
							th STT
							th Tên sách
							th Tác giả
							th Xóa
							- var i = 1;
							if phieumuon
								each pm in phieumuon
									tr
										td= i++
										td= pm.tensach
										td= pm.tacgia
										td
											button.btn(id='phieumuon' data-idgiohang= pm.idgiohang) Xóa
							- for( var x = i ; x<=5 ; x++)
								tr
									td= x
									td
									td
									td
					if danhsachduyet  == 1
						div Yêu cầu đã được gửi đi. Vui lòng đến thư viện xác nhận để nhận sách.
						button.btn.btn-info(id='muonsach' value = danhsachduyet) Hoàn Tác
					if danhsachduyet  != 1
						button.btn.btn-info(id='muonsach' value = danhsachduyet) Mượn sách
	script
		include ../code/sinhvien.sach.js